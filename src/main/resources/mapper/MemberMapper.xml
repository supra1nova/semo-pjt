<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.selfdriven.semo.mapper.MemberMapper">

    <sql id="selectFromMember">
        SELECT
            *
        FROM
            member
    </sql>

    <select id="getMemberList" resultType="Member">
        <include refid="selectFromMember"/>
        ORDER by
            member_id asc
    </select>

    <select id="selectMember" resultType="Member">
        <include refid="selectFromMember"/>
        WHERE
            email = #{email}
        ORDER by
            email asc
    </select>

    <select id="selectMemberById" resultType="Member">
        <include refid="selectFromMember"/>
        WHERE
        member_id = #{memberId}
        ORDER by
        email asc
    </select>

    <insert id="insertMember" parameterType="Member">
        INSERT INTO member
            (member_id, member_type, social_type, email, name, ph_num )
        VALUES
            (#{memberId}, #{memberType}, #{socialType}, #{email}, #{name}, #{phNum})
    </insert>

    <update id="updateMember" parameterType="Member">
        UPDATE member
        SET
            email = #{email}
          , name = #{name}
          , ph_num = #{phNum}
        WHERE member_id = #{memberId}
    </update>

    <delete id="deleteMember">
        DELETE FROM member WHERE member_id = #{memberId}
    </delete>

    <delete id="deleteAllMember">
        DELETE FROM member
    </delete>

    <select id="countAllMember" resultType="int">
        SELECT count(*) FROM member
    </select>

    <select id="getMembertype" resultType="String">
        SELECT member_type FROM member WHERE member_id = #{memberId}
    </select>
</mapper>